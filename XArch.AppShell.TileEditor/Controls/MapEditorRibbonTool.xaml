<UserControl x:Class="XArch.AppShell.TileEditor.Controls.MapEditorRibbonTool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XArch.AppShell.TileEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="White" Orientation="Horizontal">
        <ComboBox x:Name="TilesetComboBox" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" Margin="0,0,5,0" ToolTip="TileSet" />
        <ComboBox x:Name="LayerComboBox" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" ToolTip="Layer" Margin="0,0,5,0"  />
        <Button x:Name="AddLayerButton" Content=" + " VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Add Layer" Margin="0,0,5,0" />
        <Button x:Name="RemoveLayerButton" Content=" - " VerticalAlignment="Center" HorizontalAlignment="Left" ToolTip="Remove Layer" Margin="0,0,5,0" />
    </StackPanel>
</UserControl>
