<UserControl x:Class="XArch.AppShell.Controls.ProjectExplorer.ProjectExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XArch.AppShell.Controls.ProjectExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Background="Transparent">
    
    <DockPanel>
        <TreeView x:Name="ProjectTree"
                  SelectedItemChanged="ProjectTree_SelectedItemChanged"
                  PreviewMouseRightButtonDown="ProjectTree_PreviewMouseRightButtonDown"/>
    </DockPanel>
</UserControl>
