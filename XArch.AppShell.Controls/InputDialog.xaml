<Window x:Class="XArch.AppShell.Controls.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XArch.AppShell.Controls"
        mc:Ignorable="d"
        Title="InputDialog" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock x:Name="Prompt" Margin="0,0,0,5"/>
        <TextBox x:Name="InputBox" Margin="0,0,0,5"/>
        <Button Content="OK" Click="Ok_Click" />
    </StackPanel>
</Window>
